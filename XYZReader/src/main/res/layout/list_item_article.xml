<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/card_elevation"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:background="@color/photo_placeholder" />

        <TextView
            android:id="@+id/article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/mainScreen_padding"
            android:paddingTop="@dimen/mainScreen_padding"
            android:paddingRight="@dimen/mainScreen_padding"
            android:paddingBottom="@dimen/mainScreen_title_bottom_padding"
            android:textColor="@android:color/black"
            android:ellipsize="end"
            android:textSize="@dimen/mainScreen_title_size"
            android:maxLines="4" />

        <TextView
            android:id="@+id/article_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/mainScreen_padding"
            android:paddingRight="@dimen/mainScreen_padding"
            android:paddingBottom="@dimen/mainScreen_padding"
            android:textColor="@android:color/black"
            android:textSize="@dimen/mainScreen_subtitle_size"
            android:maxLines="2"
            android:ellipsize="end" />
    </LinearLayout>

</android.support.v7.widget.CardView>
